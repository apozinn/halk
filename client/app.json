{
  "expo": {
    "name": "Halk",
    "slug": "halk-realtime-messages",
    "version": "0.1.0",
    "owner": "apozinn",
    "orientation": "portrait",
    "icon": "./assets/images/halk.png",
    "scheme": "halk",
    "userInterfaceStyle": "automatic",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.apozin.halk"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.apozin.halk",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/halk.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to get your icon."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#FFFFFF",
          "image": "./assets/images/halk.png",
          "ios": {
            "resizeMode": "cover"
          },
          "android": {
            "imageWidth": 200, 
            "imageHeight": 200 
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "305b36d1-5f3a-47bf-a826-cbe8acb748e1"
      }
    }
  }
}
